<div class="container mt-4">
  <div class="row">
    <div class="col-sm-2 pt-3 px-auto">
      <h2>商品一覧</h2>
    </div>
    <div class="col-sm-10 pt-4 px-sm-0">
      <h4>(全<%= @items_all.count %>件)</h4>
    </div>
  </div>
  <div  class="row mt-3 mb-3 text-center text-xs-center text-sm-center text-md-left">
    <% @items.each do |item| %>
    <div class="col-xs-10 col-sm-10 col-md-6 col-lg-3">
      <div class="card border-0" style="width: 18rem;">
        <%= link_to item_path(item.id) do %>
          <p class="card-img-top"><%= image_tag item.get_image(200,150) %></p>
        <% end %>
      </div>
      <div class="card-body pt-0 pl-0">
        <strong class="item-details item-name card-title"><%= item.name %></strong>
        <p class="item-details card-text">￥<%= (item.price*1.1).floor.to_s(:delimited) %></p>
      </div>
    </div>
    <% end %>
  </div>
  <div>
    <%= paginate @items %>
  </div>
</div>