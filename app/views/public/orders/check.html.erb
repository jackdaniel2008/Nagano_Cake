<h1>注文情報確認</h1>

<table>
  <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
  </thead>
  <tbody>
  <% total = 0 %>
  <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= image_tag cart_item.item.get_image(100,100) %><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal %></td>
    </tr>
    <% total += cart_item.subtotal %>
  <% end %>
  </tbody>
</table>

<table>
  <tbody>
    <tr>
      <th>送料</th>
      <% @order.postage = 800 %>
      <td><%= @order.postage %>円</td>
    </tr>
    <tr>
      <th>商品合計</th>
      <td><%= total.to_i %>円</td>
    </tr>
    <tr>
      <th>請求金額</th>
      <% @order.total_amount = @order.postage + total.to_i %>
      <td><%= @order.total_amount %>円</td>
    </tr>
  </tbody>
</table>

<table>
  <tbody>
    <tr>
      <th>支払い方法</th>
        <td><%= @order.payment_method_i18n %></td>
    </tr>
    <tr>
      <th>お届け先</th>
        <td>
          <%= "〒" + @order.shipping_postal_code %>
          <%= @order.shipping_address %>
          <%= @order.shipping_name %>
        </td>
    </tr>
  </tbody>
</table>
<div>
  <%= form_with model: @order, url: orders_create_path, method: :post, local: true do |f| %>
    <%= f.hidden_field :customer_id %>
    <%= f.hidden_field :shipping_postal_code %>
    <%= f.hidden_field :shipping_address %>
    <%= f.hidden_field :shipping_name %>
    <%= f.hidden_field :postage %>
    <%= f.hidden_field :total_amount %>
    <%= f.hidden_field :payment_method %>
    <%= f.submit "注文を確定する", class: "btn btn-success" %>
  <% end %>
</div>