<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<table>
  <tbody>
    <tr>
      <th>氏名</th>
      <th>
        <%= f.label :"(姓)" %>
      </th>
      <th>
        <%= f.text_field :last_name, placeholder:"令和" %>
      </th>
      <th>
        <%= f.label :"(名)" %>
      </th>
      <th>
        <%= f.text_field :first_name, placeholder:"太郎" %>
      </th>
    </tr>
    <tr>
      <th>フリガナ</th>
      <th>
        <%= f.label :"(セイ)" %>
      </th>
      <th>
        <%= f.text_field :last_name_kana, placeholder:"レイワ" %>
      </th>
      <th>
        <%= f.label :"(メイ)" %>
      </th>
      <th>
        <%= f.text_field :first_name_kana, placeholder:"タロウ" %>
      </th>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <th></th>
      <th>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com" %>
      </th>
    </tr>
    <tr>
      <th>郵便番号(ハイフンなし)</th>
      <th></th>
      <th>
        <%= f.text_field :postal_code, placeholder:"00000000" %>
      </th>
    </tr>
    <tr>
      <th>住所</th>
      <th></th>
      <th>
        <%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0" %>
      </th>
    </tr>
    <tr>
      <th>電話番号(ハイフンなし)</th>
      <th></th>
      <th>
        <%= f.text_field :telephone_number, placeholder:"0000000000" %>
      </th>
    </tr>
    <tr>
      <th>パスワード(6文字以上)</th>
      <th></th>
      <th>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </th>
    </tr>
    <tr>
      <th>パスワード(確認用)</th>
      <th></th>
      <th>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </th>
    </tr>
    <tr>
      <th></th>
      <th></th>
      <th>
        <%= f.submit "新規登録", class: 'btn btn-sm btn-success' %>
      </th>
    </tr>
  </tbody>
</table>

<% end %>


<h2>既に登録済みの方</h2>
<%= render "public/shared/links" %>