<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
          <% if admin_signed_in? %>
            <%= link_to "ながのCAKE", admin_orders_path, class:"header-title navbar-brand text-dark" %>
          <% else %>
            <%= link_to "ながのCAKE", root_path, class:"header-title navbar-brand text-dark" %>
          <% end %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if admin_signed_in? %>
              <% if request.fullpath.include? "/admin" %>
              <li>
                <%= link_to admin_items_path, class: 'nav-link text-dark' do %>
                  商品一覧
                <% end %>
              </li>
              <li>
                <%= link_to admin_customers_path, class: 'nav-link text-dark' do %>
                  会員一覧
                <% end %>
              </li>
              <li>
                <%= link_to admin_root_path, class: 'nav-link text-dark' do %>
                  注文履歴一覧
                <% end %>
              </li>
              <li>
                <%= link_to destroy_admin_session_path, method: :delete, class: 'nav-link text-dark' do %>
                  ログアウト
                <% end %>
              </li>
              <% else %>
              <li>
                <%= link_to about_path, class: 'nav-link text-dark' do %>
                  アバウト
                <% end %>
              </li>
              <li>
                <%= link_to items_path, class: 'nav-link text-dark' do %>
                  商品一覧
                <% end %>
              </li>
              <li>
                <%= link_to new_customer_registration_path, class: 'nav-link text-dark' do %>
                  新規登録
                <% end %>
              </li>
              <li>
                <%= link_to new_customer_session_path, class: 'nav-link text-dark' do %>
                  ログイン
                <% end %>
              </li>
              <% end %>
            <% elsif customer_signed_in? %>
              <li>
                <%= link_to customers_my_page_path, class: 'nav-link text-dark' do %>
                  マイページ
                <% end %>
              </li>
              <li>
                <%= link_to items_path, class: 'nav-link text-dark' do %>
                  商品一覧
                <% end %>
              </li>
              <li>
                <%= link_to cart_items_path, class: 'nav-link text-dark' do %>
                  カート
                <% end %>
              </li>
              <li>
                <%= link_to destroy_customer_session_path, method: :delete, class: 'nav-link text-dark' do %>
                  ログアウト
                <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to about_path, class: 'nav-link text-dark' do %>
                  アバウト
                <% end %>
              </li>
              <li>
                <%= link_to items_path, class: 'nav-link text-dark' do %>
                  商品一覧
                <% end %>
              </li>
              <li>
                <%= link_to new_customer_registration_path, class: 'nav-link text-dark' do %>
                  新規登録
                <% end %>
              </li>
              <li>
                <%= link_to new_customer_session_path, class: 'nav-link text-dark' do %>
                  ログイン
                <% end %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main class="mb-auto">
    <%= yield %>
    </main>

    <footer class="bg-light text-dark pt-5 pb-4">
      <div class="container">
        <div class="row no-gutters">
          <div class="col-md-4">
            <p>nagano_cake</p>
          </div>
          <div class="col-md-8">
            <h6 class="text-white mt-2 mb-3"></h6>
            <ul class="p-0 list-unstyled">
              <li>
              </li>
              <li>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
