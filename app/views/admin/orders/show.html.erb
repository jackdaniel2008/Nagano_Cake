<h1>注文履歴詳細</h1>

<table>
  <tbody>
    <tr>
      <th>購入者</th>
      <th><%= @customer.last_name %> <%= @customer.first_name %></th>
    </tr>
    <tr>
      <th>注文日</th>
      <th><%= @order.updated_at %></th>
    </tr>
    <tr>
      <th>配送先</th>
      <th><%= @order.shipping_postal_code %><%= @order.shipping_address %><%= @order.shipping_name %></th>
    </tr>
    <tr>
      <th>支払方法</th>
      <th><%= @order.payment_method_i18n %></th>
    </tr>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <% total = 0 %>
  <!--whereメソッドを使ったeach文？-->
  <% @history_details.each do |history_detail| %>
  <tbody>
    <tr>
      <td>
        <%= history_detail.item.name %>
      </td>
      <td>
        <%= history_detail.post_tax_price %>
      </td>
      <td>
        <%= history_detail.amount %>
      </td>
      <td>
        <%= history_detail.subtotal %>
      </td>
    </tr>
  </tbody>
  <% total += history_detail.subtotal %>
  <% end %>
</table>

<table>
  <tbody>
    <tr>
      <th>商品合計</th>
      <td><%= total.to_i %>円</td>
    </tr>
    <tr>
      <th>送料</th>
      <% postage = 800 %>
      <td><%= postage %>円</td>
    </tr>
    <tr>
      <th>請求金額合計</th>
      <% total_amount = postage + total.to_i %>
      <td><%= total_amount %>円</td>
    </tr>
  </tbody>
</table>