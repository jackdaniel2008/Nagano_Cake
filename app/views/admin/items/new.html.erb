<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-3">
      <h3 class="table-secondary text-center">商品新規登録</h3>
    </div>
    <div class="col-md-7"></div>
  </div>

  <%= form_with model: @item, url:admin_items_path do |f| %>
  <div class="row justify-content-center mt-4">
    <div class="col-md-9">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>商品画像</th>
            <th>
              <%= f.file_field :image, placeholder: "ファイルを選択", accept: "image/*" %>
            </th>
          </tr>
          <tr>
            <th>商品名</th>
            <th>
              <%= f.text_field :name, placeholder:"商品名" %>
            </th>
          </tr>
          <tr>
            <th>商品説明</th>
            <th>
              <%= f.text_area :introduction, placeholder:"ここに説明文を記述します" %>
            </th>
          </tr>
          <tr>
            <th>税抜価格</th>
            <th>
              <%= f.text_field :price, placeholder:"1000" %>円
            </th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row justify-content-center mt-3">
    <div class="col-md-3"></div>
    <div class="col-md-7">
      <%= f.submit "新規登録", class: 'btn btn-sm btn-success' %>
    </div>
  </div>
  <% end %>
</div>