<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-2">
      <h3 class="table-secondary text-center">商品詳細</h3>
    </div>
    <div class="col-md-8"></div>
  </div>

  <div class="row justify-content-center mt-4">
    <div class="col-md-4">
      <%= image_tag @item.get_image(300,300) %>
    </div>
    <div class="col-md-6">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>商品名</th>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <th>
              税込価格<br>
              (税抜価格)
            </th>
            <td><%= @item.with_tax_price.to_s(:delimited) %>円(<%= @item.price.to_s(:delimited) %>円)</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row justify-content-center mt-4">
    <div class="col-md-4"></div>
    <div class="col-md-6">
        <%= link_to "編集する", edit_admin_item_path, class: 'btn btn-sm btn-success' %>
    </div>
  </div>
</div>