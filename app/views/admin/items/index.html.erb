<h1>商品一覧</h1>

<div>
  <%= link_to "商品登録", new_admin_item_path %>
</div>
<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
    </tr>
  </thead>
  <tbody>
  <% @items.each do |item| %>
    <tr>
      <td>
        <%= item.id %>
      </td>
      <td>
        <%= link_to admin_item_path(item.id) do %>
          <%= item.name %>
        <% end %>
      </td>
      <td>
        <%= item.price.to_s(:delimited) %>円
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<div>
  <%= paginate @items %>
</div>
