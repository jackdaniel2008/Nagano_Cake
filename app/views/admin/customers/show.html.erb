<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <h3 class="table-secondary text-center"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>
    </div>
    <div class="col-md-5"></div>
  </div>

  <div class="row justify-content-center mt-2">
    <div class="col-md-6">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>会員ID</th>
            <th><%= @customer.id %></th>
          </tr>
          <tr>
            <th>氏名</th>
            <th><%= @customer.last_name %> <%= @customer.first_name %></th>
          </tr>
          <tr>
            <th>フリガナ</th>
            <th><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></th>
          </tr>
          <tr>
            <th>郵便番号</th>
            <th><%= @customer.postal_code %></th>
          </tr>
          <tr>
            <th>住所</th>
            <th><%= @customer.address %></th>
          </tr>
          <tr>
            <th>電話番号</th>
            <th><%= @customer.telephone_number %></th>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <th><%= @customer.email %></th>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <th>
              <% if @customer.is_deleted == false %>
                <strong class="text-success"><%= "有効" %></strong>
              <% else %>
                <strong class="text-secondary"><%= "退会" %></strong>
              <% end %>
            </th>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-4"></div>
  </div>
  <div class="row justify-content-center mt-2">
    <div class="col-md-2"></div>
    <div class="col-md-2">
      <%= link_to "編集する", edit_admin_customer_path, class: 'btn btn-sm btn-success' %>
    </div>
    <div class="col-md-2">
      <%= link_to "注文履歴一覧を見る", admin_root_path, class: 'btn btn-sm btn-primary' %>
    </div>
    <div class="col-md-4"></div>
  </div>
</div>