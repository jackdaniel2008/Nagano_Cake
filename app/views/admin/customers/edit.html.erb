<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-5">
      <h3 class="table-secondary text-center"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
    </div>
    <div class="col-md-5"></div>
  </div>

  <%= form_with model: @customer, url: admin_customer_path, method: :patch, local: true do |f| %>
  <div class="row justify-content-center mt-3">
    <div class="col-md-9">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>会員ID</th>
            <th><%= @customer.id %></th>
          </tr>
          <tr>
            <th>氏名</th>
            <th><%= f.text_field :last_name %></th>
            <th><%= f.text_field :first_name %></th>
          </tr>
          <tr>
            <th>フリガナ</th>
            <th><%= f.text_field :last_name_kana %></th>
            <th><%= f.text_field :first_name_kana %></th>
          </tr>
          <tr>
            <th>郵便番号</th>
            <th><%= f.text_field :postal_code %></th>
          </tr>
          <tr>
            <th>住所</th>
            <th><%= f.text_field :address %></th>
          </tr>
          <tr>
            <th>電話番号</th>
            <th><%= f.text_field :telephone_number %></th>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <th><%= f.email_field :email, autofocus: true, autocomplete: "email" %></th>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <th>
              <!--ラジオボタン機能で二択のチェックボックス作成-->
              <%= f.radio_button :is_deleted, false %>
              <%= f.label :"有効" %>

              <%= f.radio_button :is_deleted, true %>
              <%= f.label :"退会" %>
            </th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row justify-content-center mt-3">
    <div class="col-md-3"></div>
    <div class="col-md-7">
      <%= f.submit "変更を保存", class: 'btn btn-sm btn-success' %>
    </div>
  </div>
  <% end %>
</div>
